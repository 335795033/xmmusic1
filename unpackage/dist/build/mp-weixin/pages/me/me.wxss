
.header{
	width: 100%;
	height: 11rem;
	background: #333333;
	padding-top: 2rem;
}
.header-t,.header-b{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.header-t{
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	padding: 2.5rem 1rem 0;
}
.uname{
	margin-top: 1.2rem;
	font-size: 1.2rem;
	color: #fff;
	font-weight: bold;
}
.header-t image{
	width: 5rem;
	height: 5rem;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
}
.header-b{
	padding: 0 1rem;
}
.num{
	font-size: 1rem;
	font-weight: bold;
	color: #FFFFFF;
}
.box{
	margin:0 .5rem;
}
.title{
	font-size: .5rem;
	color: #999;
}

